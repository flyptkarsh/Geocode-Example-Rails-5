<p id="notice"><%= notice %></p>
<div class="input-group">
   <input id="newPlace" type="text" class="form-control" placeholder="Add a location">
   <span class="input-group-btn">
     <button id="submit" class="btn btn-secondary" type="button">Add Location</button>
   </span>
 </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
  </thead>

  <tbody id="locationsTable">
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name.titleize %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
      </tr>
    <% end %>
  </tbody>
</table>
